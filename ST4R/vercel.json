const safeKakaoAccess = () => {
  try {
    return typeof window !== 'undefined' &&
      window.kakao &&
      window.kakao.maps &&
      typeof window.kakao.maps.Map === 'function'
      ? window.kakao
      : null;
  } catch (error) {
    console.error('ì¹´ì¹´ì˜¤ ë§µ ì ‘ê·¼ ì‹¤íŒ¨:', error);
    return null;
  }
};

// ê°„ë‹¨í•˜ê³  í™•ì‹¤í•œ ì¹´ì¹´ì˜¤ ë§µ ë¡œë”
const loadKakaoMap = () => {
  return new Promise((resolve, reject) => {
    // ì´ë¯¸ ë¡œë“œëœ ê²½ìš°
    if (window.kakao && window.kakao.maps && window.kakao.maps.Map) {
      console.log('âœ… ì¹´ì¹´ì˜¤ ë§µì´ ì´ë¯¸ ë¡œë“œë¨');
      resolve(window.kakao);
      return;
    }

    // ìŠ¤í¬ë¦½íŠ¸ê°€ ì´ë¯¸ ìˆëŠ”ì§€ í™•ì¸
    const existingScript = document.querySelector('script[src*="dapi.kakao.com"]');
    if (existingScript) {
      console.log('â³ ê¸°ì¡´ ìŠ¤í¬ë¦½íŠ¸ ë¡œë“œ ëŒ€ê¸° ì¤‘...');
      
      // ê¸°ì¡´ ìŠ¤í¬ë¦½íŠ¸ì˜ ë¡œë“œë¥¼ ê¸°ë‹¤ë¦¼
      const waitForExisting = () => {
        if (window.kakao && window.kakao.maps) {
          if (window.kakao.maps.Map) {
            console.log('âœ… ê¸°ì¡´ ìŠ¤í¬ë¦½íŠ¸ë¡œ ì¹´ì¹´ì˜¤ ë§µ ë¡œë“œ ì™„ë£Œ');
            resolve(window.kakao);
          } else if (window.kakao.maps.load) {
            console.log('ğŸ”„ kakao.maps.load() ì‹¤í–‰ ì¤‘...');
            window.kakao.maps.load(() => {
              console.log('âœ… kakao.maps.load() ì™„ë£Œ');
              resolve(window.kakao);
            });
          } else {
            setTimeout(waitForExisting, 100);
          }
        } else {
          setTimeout(waitForExisting, 100);
        }
      };
      
      waitForExisting();
      
      // 10ì´ˆ íƒ€ì„ì•„ì›ƒ
      setTimeout(() => {
        if (!window.kakao || !window.kakao.maps || !window.kakao.maps.Map) {
          reject(new Error('ê¸°ì¡´ ìŠ¤í¬ë¦½íŠ¸ ë¡œë“œ íƒ€ì„ì•„ì›ƒ'));
        }
      }, 10000);
      
      return;
    }

    // ìƒˆ ìŠ¤í¬ë¦½íŠ¸ ìƒì„±
    console.log('ğŸ“¥ ìƒˆ ì¹´ì¹´ì˜¤ ë§µ ìŠ¤í¬ë¦½íŠ¸ ë¡œë“œ ì‹œì‘');
    const script = document.createElement('script');
    const apiKey = '5efbd2f844cb3d8609377a11750272bb';
    
    script.async = true;
    script.src = `https://dapi.kakao.com/v2/maps/sdk.js?appkey=${apiKey}&libraries=services&autoload=false`;
    
    script.onload = () => {
      console.log('ğŸ“¦ ìŠ¤í¬ë¦½íŠ¸ ë‹¤ìš´ë¡œë“œ ì™„ë£Œ, ì´ˆê¸°í™” ì‹œì‘...');
      
      // kakao ê°ì²´ í™•ì¸
      const checkKakao = () => {
        if (window.kakao && window.kakao.maps) {
          if (window.kakao.maps.load) {
            console.log('ğŸ”„ kakao.maps.load() ì‹¤í–‰...');
            window.kakao.maps.load(() => {
              console.log('âœ… ì¹´ì¹´ì˜¤ ë§µ ì™„ì „ ì´ˆê¸°í™” ì™„ë£Œ');
              resolve(window.kakao);
            });
          } else if (window.kakao.maps.Map) {
            console.log('âœ… ì¹´ì¹´ì˜¤ ë§µ ì¦‰ì‹œ ì‚¬ìš© ê°€ëŠ¥');
            resolve(window.kakao);
          } else {
            setTimeout(checkKakao, 50);
          }
        } else {
          setTimeout(checkKakao, 50);
        }
      };
      
      checkKakao();
    };
    
    script.onerror = (error) => {
      console.error('âŒ ìŠ¤í¬ë¦½íŠ¸ ë¡œë“œ ì‹¤íŒ¨:', error);
      reject(new Error('ì¹´ì¹´ì˜¤ ë§µ ìŠ¤í¬ë¦½íŠ¸ ë¡œë“œ ì‹¤íŒ¨'));
    };
    
    // 15ì´ˆ íƒ€ì„ì•„ì›ƒ
    setTimeout(() => {
      if (!window.kakao || !window.kakao.maps || !window.kakao.maps.Map) {
        reject(new Error('ìŠ¤í¬ë¦½íŠ¸ ë¡œë“œ íƒ€ì„ì•„ì›ƒ (15ì´ˆ)'));
      }
    }, 15000);
    
    document.head.appendChild(script);
  });
};

export default function MapSearchPage() {
  const navigate = useNavigate();
  const [searchParams] = useSearchParams();
  const mapContainer = useRef(null);
  const mapRef = useRef(null);
  const markerRef = useRef(null);
  const circleRef = useRef(null);
  const geocoderRef = useRef(null);
  const infowindowRef = useRef(null);
  const isInitialized = useRef(false);

  // ìƒíƒœ ê´€ë¦¬
  const [keyword, setKeyword] = useState('');
  const [selectedLocation, setSelectedLocation] = useState(null);
  const [searchRadius, setSearchRadius] = useState(1000);
  const [placelist, setPlacelist] = useState([]);
  const [showPlaceList, setShowPlaceList] = useState(false);
  const [mapLoading, setMapLoading] = useState(true);
  const [mapError, setMapError] = useState(null);
  const [loadingMessage, setLoadingMessage] = useState('ì¹´ì¹´ì˜¤ ì§€ë„ ë¡œë”© ì¤‘...');

  const selectedLocationRef = useRef(null);

  // URL íŒŒë¼ë¯¸í„°ì—ì„œ ì´ˆê¸° ê°’ ê°€ì ¸ì˜¤ê¸°
  const initialLat = searchParams.get('lat');
  const initialLng = searchParams.get('lng');
  const initialLocationName = searchParams.get('locationName');
  const initialRoadAddress = searchParams.get('roadAddress');
  const initialRadius = searchParams.get('searchRadius');

  useEffect(() => {
    if (initialRadius) {
      setSearchRadius(parseInt(initialRadius));
    }
  }, [initialRadius]);

  useEffect(() => {
    selectedLocationRef.current = selectedLocation;
  }, [selectedLocation]);

  // ë°˜ê²½ì— ë”°ë¥¸ ì§€ë„ ë ˆë²¨ ê³„ì‚°
  const getMapLevelForRadius = useCallback((radius) => {
    if (radius <= 200) return 4;
    if (radius <= 500) return 5;
    if (radius <= 1000) return 6;
    if (radius <= 2000) return 7;
    if (radius <= 3000) return 8;
    if (radius <= 5000) return 9;
    if (radius <= 7000) return 10;
    return 11;
  }, []);

  // ì› ì—…ë°ì´íŠ¸
  const updateCircle = useCallback(
    (locPosition, radius, kakao) => {
      if (!kakao || !mapRef.current) return;

      try {
        // ê¸°ì¡´ ì› ì œê±°
        if (circleRef.current) {
          circleRef.current.setMap(null);
        }

        // ìƒˆë¡œìš´ ì› ìƒì„±
        const circle = new kakao.maps.Circle({
          center: locPosition,
          radius: radius,
          strokeWeight: 2,
          strokeColor: '#FFBB02',
          strokeOpacity: 0.8,
          fillColor: '#FFBB02',
          fillOpacity: 0.1,
        });

        circle.setMap(mapRef.current);
        circleRef.current = circle;

        // ì§€ë„ ë ˆë²¨ ì¡°ì •
        const newLevel = getMapLevelForRadius(radius);
        mapRef.current.setLevel(newLevel);
      } catch (error) {
        console.error('ì› ì—…ë°ì´íŠ¸ ì‹¤íŒ¨:', error);
      }
    },
    [getMapLevelForRadius]
  );

  // ë§ˆì»¤ í‘œì‹œ
  const displayMarker = useCallback(
    (locPosition, locationData, radius, kakao) => {
      if (!kakao || !mapRef.current) return;

      try {
        // ë§ˆì»¤ ìƒì„± ë˜ëŠ” ì—…ë°ì´íŠ¸
        if (markerRef.current) {
          markerRef.current.setPosition(locPosition);
        } else {
          const marker = new kakao.maps.Marker({
            map: mapRef.current,
            position: locPosition,
          });
          markerRef.current = marker;
        }

        // ì§€ë„ ì¤‘ì‹¬ ì„¤ì •
        mapRef.current.setCenter(locPosition);
        const newLevel = getMapLevelForRadius(radius);
        mapRef.current.setLevel(newLevel);

        // ì› ì—…ë°ì´íŠ¸
        setTimeout(() => {
          updateCircle(locPosition, radius, kakao);
        }, 300);

        // ì¸í¬ìœˆë„ìš°
        if (infowindowRef.current && locationData) {
          const message = `
          <div style="padding: 8px 12px; min-width: 150px; text-align: center;">
            <div style="font-weight: bold; color: #333; margin-bottom: 4px; font-size: 14px;">
              ${locationData.locationName}
            </div>
            <div style="color: #666; font-size: 12px;">
              ${locationData.roadAddress}
            </div>
            <div style="color: #FFBB02; font-size: 11px; margin-top: 4px; font-weight: bold;">
              ${radius >= 1000 ? `${radius / 1000}km` : `${radius}m`} ë°˜ê²½
            </div>
          </div>
        `;
          infowindowRef.current.setContent(message);
          infowindowRef.current.open(mapRef.current, markerRef.current);
        }
      } catch (error) {
        console.error('ë§ˆì»¤ í‘œì‹œ ì‹¤íŒ¨:', error);
      }
    },
    [updateCircle, getMapLevelForRadius]
  );

  // ì§€ë„ ì´ˆê¸°í™” - ë‹¨ìˆœí™”ëœ ì ‘ê·¼
  useEffect(() => {
    let mounted = true;

    const initializeMap = async () => {
      // ì´ë¯¸ ì´ˆê¸°í™”ë¨
      if (isInitialized.current) {
        console.log('ğŸ”„ ì´ë¯¸ ì´ˆê¸°í™”ëœ ì§€ë„');
        return;
      }

      try {
        setMapLoading(true);
        setMapError(null);
        setLoadingMessage('ì¹´ì¹´ì˜¤ ì§€ë„ ë¡œë”© ì¤‘...');

        console.log('ğŸš€ ì§€ë„ ì´ˆê¸°í™” ì‹œì‘');
        
        // ì¹´ì¹´ì˜¤ ë§µ ë¡œë“œ
        const kakao = await loadKakaoMap();
        
        if (!mounted || !mapContainer.current) {
          console.log('ğŸš« ì»´í¬ë„ŒíŠ¸ê°€ ì–¸ë§ˆìš´íŠ¸ë¨');
          return;
        }

        console.log('ğŸ—ºï¸ ì§€ë„ ìƒì„± ì‹œì‘');
        setLoadingMessage('ì§€ë„ ìƒì„± ì¤‘...');

        // ì´ˆê¸° ì¢Œí‘œ ì„¤ì •
        const defaultLat = initialLat ? parseFloat(initialLat) : 35.1595454;
        const defaultLng = initialLng ? parseFloat(initialLng) : 126.8526012;

        // ì§€ë„ ìƒì„±
        const mapOptions = {
          center: new kakao.maps.LatLng(defaultLat, defaultLng),
          level: 6,
        };

        const map = new kakao.maps.Map(mapContainer.current, mapOptions);
        const geocoder = new kakao.maps.services.Geocoder();
        const infowindow = new kakao.maps.InfoWindow({ zIndex: 1 });

        // ì°¸ì¡° ì €ì¥
        mapRef.current = map;
        geocoderRef.current = geocoder;
        infowindowRef.current = infowindow;
        isInitialized.current = true;

        console.log('âœ… ì§€ë„ ìƒì„± ì™„ë£Œ');

        // ì´ˆê¸° ìœ„ì¹˜ ì„¤ì •
        if (initialLat && initialLng) {
          const initLocation = {
            lat: parseFloat(initialLat),
            lng: parseFloat(initialLng),
            locationName: initialLocationName || 'ì„ íƒëœ ìœ„ì¹˜',
            roadAddress: initialRoadAddress || 'ì£¼ì†Œ ì •ë³´ ì—†ìŒ',
          };
          setSelectedLocation(initLocation);

          const initPosition = new kakao.maps.LatLng(
            initLocation.lat,
            initLocation.lng
          );
          displayMarker(initPosition, initLocation, searchRadius, kakao);
        }

        // ì§€ë„ í´ë¦­ ì´ë²¤íŠ¸
        kakao.maps.event.addListener(map, 'click', (mouseEvent) => {
          const clickedLatLng = mouseEvent.latLng;

          geocoder.coord2Address(
            clickedLatLng.getLng(),
            clickedLatLng.getLat(),
            (result, status) => {
              if (status === kakao.maps.services.Status.OK) {
                const road = result[0].road_address?.address_name;
                const jibun = result[0].address?.address_name;
                const addressText = road || jibun || 'ì£¼ì†Œ ì •ë³´ ì—†ìŒ';

                const locationData = {
                  lat: clickedLatLng.getLat(),
                  lng: clickedLatLng.getLng(),
                  locationName: 'ì„ íƒí•œ ìœ„ì¹˜',
                  roadAddress: addressText,
                };

                setSelectedLocation(locationData);
                displayMarker(clickedLatLng, locationData, searchRadius, kakao);
              }
            }
          );
        });

        // í˜„ì¬ ìœ„ì¹˜ ê°€ì ¸ì˜¤ê¸° (ì´ˆê¸° ìœ„ì¹˜ê°€ ì—†ì„ ë•Œë§Œ)
        if (!initialLat && !initialLng && navigator.geolocation) {
          setLoadingMessage('í˜„ì¬ ìœ„ì¹˜ í™•ì¸ ì¤‘...');
          navigator.geolocation.getCurrentPosition(
            (position) => {
              const lat = position.coords.latitude;
              const lng = position.coords.longitude;
              const locPosition = new kakao.maps.LatLng(lat, lng);

              geocoder.coord2Address(lng, lat, (result, status) => {
                if (status === kakao.maps.services.Status.OK) {
                  const road = result[0].road_address?.address_name;
                  const jibun = result[0].address?.address_name;
                  const addressText = road || jibun || 'ì£¼ì†Œ ì •ë³´ ì—†ìŒ';

                  const currentLocationData = {
                    lat,
                    lng,
                    locationName: 'í˜„ì¬ ìœ„ì¹˜',
                    roadAddress: addressText,
                  };

                  setSelectedLocation(currentLocationData);
                  displayMarker(
                    locPosition,
                    currentLocationData,
                    searchRadius,
                    kakao
                  );
                } else {
                  const currentLocationData = {
                    lat,
                    lng,
                    locationName: 'í˜„ì¬ ìœ„ì¹˜',
                    roadAddress: 'ì£¼ì†Œ ì •ë³´ ì—†ìŒ',
                  };
                  setSelectedLocation(currentLocationData);
                  displayMarker(
                    locPosition,
                    currentLocationData,
                    searchRadius,
                    kakao
                  );
                }
              });
            },
            (error) => {
              console.log('ğŸ“ í˜„ì¬ ìœ„ì¹˜ ì¡°íšŒ ì‹¤íŒ¨:', error);
              const defaultPosition = new kakao.maps.LatLng(
                35.1595454,
                126.8526012
              );
              map.setCenter(defaultPosition);
              map.setLevel(getMapLevelForRadius(searchRadius));
            }
          );
        }

        setMapLoading(false);
        console.log('ğŸ‰ ì§€ë„ ì´ˆê¸°í™” ì™„ì „ ì™„ë£Œ');
        
      } catch (error) {
        console.error('âŒ ì§€ë„ ì´ˆê¸°í™” ì‹¤íŒ¨:', error);
        if (mounted) {
          setMapLoading(false);
          
          if (error.message.includes('íƒ€ì„ì•„ì›ƒ')) {
            setMapError('ë¡œë”© ì‹œê°„ì´ ì´ˆê³¼ë˜ì—ˆìŠµë‹ˆë‹¤. ì¸í„°ë„· ì—°ê²°ì„ í™•ì¸í•˜ê³  ìƒˆë¡œê³ ì¹¨í•´ì£¼ì„¸ìš”.');
          } else if (error.message.includes('ìŠ¤í¬ë¦½íŠ¸')) {
            setMapError('ì¹´ì¹´ì˜¤ ë§µì„ ë¶ˆëŸ¬ì˜¬ ìˆ˜ ì—†ìŠµë‹ˆë‹¤. ìƒˆë¡œê³ ì¹¨ì„ ì‹œë„í•´ì£¼ì„¸ìš”.');
          } else {
            setMapError(`ì§€ë„ ë¡œë”© ì‹¤íŒ¨: ${error.message}`);
          }
        }
      }
    };

    initializeMap();

    return () => {
      mounted = false;
      // í´ë¦°ì—…
      if (markerRef.current) {
        try {
          markerRef.current.setMap(null);
        } catch (e) {
          console.log('ë§ˆì»¤ ì •ë¦¬ ì‹¤íŒ¨:', e);
        }
      }
      if (circleRef.current) {
        try {
          circleRef.current.setMap(null);
        } catch (e) {
          console.log('ì› ì •ë¦¬ ì‹¤íŒ¨:', e);
        }
      }
    };
  }, [displayMarker, searchRadius, getMapLevelForRadius, initialLat, initialLng, initialLocationName, initialRoadAddress]);

  // ì¥ì†Œ ê²€ìƒ‰
  const searchPlaces = useCallback(() => {
    const kakao = safeKakaoAccess();
    if (!keyword.trim() || !kakao) return;

    try {
      const ps = new kakao.maps.services.Places();
      ps.keywordSearch(keyword, (data, status) => {
        if (status === kakao.maps.services.Status.OK) {
          setPlacelist(data);
          setShowPlaceList(true);
        } else {
          setPlacelist([]);
          setShowPlaceList(false);
        }
      });
    } catch (error) {
      console.error('ì¥ì†Œ ê²€ìƒ‰ ì‹¤íŒ¨:', error);
      setPlacelist([]);
    }
  }, [keyword]);

  // ì¥ì†Œ ì„ íƒ
  const handlePlaceClick = useCallback(
    (place) => {
      const kakao = safeKakaoAccess();
      if (!kakao) return;

      try {
        const lat = parseFloat(place.y);
        const lng = parseFloat(place.x);
        const locPosition = new kakao.maps.LatLng(lat, lng);

        const locationData = {
          lat,
          lng,
          locationName: place.place_name,
          roadAddress: place.road_address_name || place.address_name,
        };

        setShowPlaceList(false);
        setKeyword('');
        setPlacelist([]);
        setSelectedLocation(locationData);

        displayMarker(locPosition, locationData, searchRadius, kakao);
      } catch (error) {
        console.error('ì¥ì†Œ ì„ íƒ ì‹¤íŒ¨:', error);
      }
    },
    [displayMarker, searchRadius]
  );

  // ë°˜ê²½ ë³€ê²½ í•¸ë“¤ëŸ¬
  const radiusUpdateTimer = useRef(null);

  const handleRadiusChange = useCallback(
    (newRadius) => {
      setSearchRadius(newRadius);

      if (radiusUpdateTimer.current) {
        clearTimeout(radiusUpdateTimer.current);
      }

      radiusUpdateTimer.current = setTimeout(() => {
        const currentLocation = selectedLocationRef.current;
        const kakao = safeKakaoAccess();

        if (
          currentLocation &&
          currentLocation.lat &&
          currentLocation.lng &&
          kakao
        ) {
          try {
            const locPosition = new kakao.maps.LatLng(
              currentLocation.lat,
              currentLocation.lng
            );

            if (mapRef.current) {
              mapRef.current.setCenter(locPosition);
              const newLevel = getMapLevelForRadius(newRadius);
              mapRef.current.setLevel(newLevel);

              if (markerRef.current) {
                markerRef.current.setPosition(locPosition);
              }

              updateCircle(locPosition, newRadius, kakao);

              if (infowindowRef.current && markerRef.current) {
                const message = `
                <div style="padding: 8px 12px; min-width: 150px; text-align: center;">
                  <div style="font-weight: bold; color: #333; margin-bottom: 4px; font-size: 14px;">
                    ${currentLocation.locationName}
                  </div>
                  <div style="color: #666; font-size: 12px;">
                    ${currentLocation.roadAddress}
                  </div>
                  <div style="color: #FFBB02; font-size: 11px; margin-top: 4px; font-weight: bold;">
                    ${newRadius >= 1000 ? `${newRadius / 1000}km` : `${newRadius}m`} ë°˜ê²½
                  </div>
                </div>
              `;
                infowindowRef.current.setContent(message);
                infowindowRef.current.open(mapRef.current, markerRef.current);
              }
            }
          } catch (error) {
            console.error('ë°˜ê²½ ë³€ê²½ ì‹¤íŒ¨:', error);
          }
        }
      }, 200);
    },
    [getMapLevelForRadius, updateCircle]
  );

  useEffect(() => {
    return () => {
      if (radiusUpdateTimer.current) {
        clearTimeout(radiusUpdateTimer.current);
      }
    };
  }, []);

  const from = searchParams.get('from') || 'home';

  const handleGoBack = () => {
    if (selectedLocation) {
      const params = new URLSearchParams({
        lat: selectedLocation.lat.toString(),
        lng: selectedLocation.lng.toString(),
        locationName: selectedLocation.locationName,
        roadAddress: selectedLocation.roadAddress,
        searchRadius: searchRadius.toString(),
      });
      navigate(`/${from}?${params.toString()}`);
    } else {
      navigate(`/${from}`);
    }
  };

  const handleKeyDown = (e) => {
    if (e.key === 'Enter') {
      searchPlaces();
    }
    if (e.key === 'Escape') {
      setShowPlaceList(false);
      setKeyword('');
    }
  };

  const handleInputBlur = () => {
    setTimeout(() => {
      setShowPlaceList(false);
    }, 150);
  };

  const formatRadius = (radius) => {
    if (radius >= 1000) {
      const km = radius / 1000;
      return km % 1 === 0 ? `${km}km` : `${km.toFixed(1)}km`;
    }
    return `${radius}m`;
  };

  // ìƒˆë¡œê³ ì¹¨ í•¸ë“¤ëŸ¬
  const handleRefresh = () => {
    isInitialized.current = false;
    
    // ê¸°ì¡´ ìŠ¤í¬ë¦½íŠ¸ ì œê±°
    const existingScript = document.querySelector('script[src*="dapi.kakao.com"]');
    if (existingScript) {
      existingScript.remove();
    }
    
    // í˜ì´ì§€ ìƒˆë¡œê³ ì¹¨
    window.location.reload();
  };

  return (
    <div className="h-screen bg-black text-white flex flex-col">
      {/* í—¤ë” */}
      <div className="p-4 flex-shrink-0">
        <div className="flex items-center justify-between mb-4">
          <div className="flex items-center space-x-3">
            <BackButton />
            <h1 className="text-xl font-bold">
              ì§€ë„ë¡œ {from === 'groups' ? 'ëª¨ì„' : 'ê²Œì‹œê¸€'} ì°¾ê¸°
            </h1>
          </div>
          {selectedLocation && !mapError && (
            <button
              onClick={handleGoBack}
              className="bg-yellow-500 text-black px-4 py-2 rounded-lg font-medium hover:bg-yellow-400 transition-colors"
            >
              ì ìš©í•˜ê¸°
            </button>
          )}
        </div>

        {/* ê²€ìƒ‰ì°½ */}
        <div className="relative mb-4">
